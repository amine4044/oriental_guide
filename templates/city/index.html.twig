{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #f2f6fc;
            font-family: 'Segoe UI', sans-serif;
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .table {
            width: 90%;
            margin: 0 auto 20px auto;
            background: white;
            border-collapse: collapse;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .table th, .table td {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            text-align: left;
        }

        .table thead {
            background-color: #007bff;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .actions a {
            margin-right: 10px;
            text-decoration: none;
            padding: 6px 12px;
            border-radius: 6px;
            color: white;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .actions a:first-child {
            background-color: #28a745;
        }

        .actions a:first-child:hover {
            background-color: #218838;
        }

        .actions a:last-child {
            background-color: #007bff;
        }

        .actions a:last-child:hover {
            background-color: #0056b3;
        }

        .create-btn {
            display: block;
            width: max-content;
            margin: 0 auto;
            background-color: #17a2b8;
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .create-btn:hover {
            background-color: #138496;
        }

        @media (max-width: 768px) {
            .table th, .table td {
                padding: 10px;
                font-size: 14px;
            }

            .actions a {
                padding: 5px 10px;
                font-size: 13px;
            }
        }
    </style>

    <h1>City index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>ImageUrl</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.name }}</td>
                <td>{{ city.description }}</td>
                <td>{{ city.imageUrl }}</td>
                <td class="actions">
                    <a href="{{ path('app_city_show', {'id': city.id}) }}">Show</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" style="text-align: center;">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_city_new') }}" class="create-btn">Create new</a>
{% endblock %}
