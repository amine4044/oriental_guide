<form method="post" action="{{ path('app_city_delete', {'id': city.id}) }}" onsubmit="return confirm('Are you sure you want to delete this city?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
    <button class="btn btn-delete">Delete City</button>
</form>

<style>
    .btn-delete {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.3s ease;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }
</style>
