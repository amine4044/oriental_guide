{% extends 'base.html.twig' %}

{% block title %}Détails de la Voiture{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg border-0">
            <div class="row g-0">
                <div class="col-md-5">
                    {% if car.image %}
                        <img src="{{ asset('uploads/cars/' ~ car.image) }}" class="img-fluid rounded-start" alt="{{ car.name }}">
                    {% else %}
                        <img src="{{ asset('images/default-car.jpg') }}" class="img-fluid rounded-start" alt="Image par défaut">
                    {% endif %}
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h2 class="card-title">{{ car.name }}</h2>
                        <p class="card-text"><strong>Adresse :</strong> {{ car.address }}</p>
                        <p class="card-text"><strong>Prix :</strong> {{ car.price }} MAD / jour</p>
                        <p class="card-text"><small class="text-muted">ID : {{ car.id }}</small></p>

                        <div class="mt-4 d-flex gap-2">
                            <a href="{{ path('app_car_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour à la liste
                            </a>
                            <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                            {{ include('car/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
