{% extends 'base.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block body %}
    <style>
        body {
            background: #f7f9fc;
            font-family: 'Segoe UI', sans-serif;
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .table thead {
            background-color: #0069d9;
            color: white;
        }

        .table th,
        .table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
            text-align: left;
            font-size: 15px;
        }

        .table tr:nth-child(even) {
            background-color: #f1f1f1;
        }

        .table tr:hover {
            background-color: #e9ecef;
        }

        a {
            display: inline-block;
            padding: 6px 12px;
            margin-right: 5px;
            font-size: 14px;
            color: white;
            background-color: #17a2b8;
            border-radius: 5px;
            text-decoration: none;
            transition: background 0.3s ease;
        }

        a:hover {
            background-color: #138496;
        }

        a[href*="edit"] {
            background-color: #ffc107;
        }

        a[href*="edit"]:hover {
            background-color: #e0a800;
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .create-button:hover {
            background-color: #218838;
        }

        @media (max-width: 768px) {
            .table th, .table td {
                padding: 10px;
                font-size: 13px;
            }

            a, .create-button {
                font-size: 12px;
                padding: 6px 10px;
            }

            h1 {
                font-size: 22px;
            }
        }
    </style>

    <h1>Hotel index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Stars</th>
            <th>Address</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.name }}</td>
                <td>{{ hotel.stars }}</td>
                <td>{{ hotel.address }}</td>
                <td>{{ hotel.price }}</td>
                <td>{{ hotel.image }}</td>
                <td>
                    <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}">Show</a>
                    <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hotel_new') }}" class="create-button">Create new</a>
{% endblock %}
