{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f0f4f8;
            font-weight: bold;
            color: #333;
        }

        .table tr:hover {
            background-color: #f9fafb;
        }

        .links-container {
            text-align: center;
            margin-top: 20px;
        }

        .links-container a {
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
            margin: 0 10px;
            transition: color 0.3s;
        }

        .links-container a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
    </style>

    <h1>Booking Details</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ booking.id }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ booking.price }}</td>
        </tr>
        <tr>
            <th>DateFrom</th>
            <td>{{ booking.dateFrom ? booking.dateFrom|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>DateTo</th>
            <td>{{ booking.dateTo ? booking.dateTo|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="links-container">
        <a href="{{ path('app_booking_index') }}">Back to list</a>
        <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">Edit</a>
    </div>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
