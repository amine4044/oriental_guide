{% extends 'base.html.twig' %}

{% block title %}Delete Booking{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

        .btn {
            display: inline-block;
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .btn:hover {
            background-color: #c82333;
        }

        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #17a2b8;
            font-weight: bold;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>

    <h1>Delete Booking</h1>

    <div class="form-container">
        <form method="post" action="{{ path('app_booking_delete', {'id': booking.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
            <button class="btn">Delete</button>
        </form>
    </div>

    <a href="{{ path('app_booking_index') }}" class="back-link">‚Üê Back to list</a>
{% endblock %}
