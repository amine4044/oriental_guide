{% extends 'base.html.twig' %}

{% block title %}Détails du Restaurant{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg border-0">
            <div class="row g-0">
                <div class="col-md-5">
                    {% if restaurant.image %}
                        <img src="{{ asset('uploads/restaurants/' ~ restaurant.image) }}" class="img-fluid rounded-start" alt="{{ restaurant.name }}">
                    {% else %}
                        <img src="{{ asset('images/default-restaurant.jpg') }}" class="img-fluid rounded-start" alt="Image par défaut">
                    {% endif %}
                </div>

                <div class="col-md-7">
                    <div class="card-body">
                        <h2 class="card-title">
                            <i class="fas fa-utensils me-2"></i>{{ restaurant.name }}
                        </h2>
                        <p class="card-text"><strong>Type :</strong> {{ restaurant.type }}</p>
                        <p class="card-text"><strong>Adresse :</strong> {{ restaurant.address }}</p>
                        <p class="card-text"><small class="text-muted">ID : {{ restaurant.id }}</small></p>

                        <div class="mt-4 d-flex gap-2">
                            <a href="{{ path('app_restaurant_index') }}" class="btn btn-secondary fw-bold shadow rounded-pill">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>

                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>

                                {{ include('restaurant/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
