{% extends 'base.html.twig' %}

{% block title %}Modifier le Restaurant{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0"><i class="fas fa-edit me-2"></i>Modifier le Restaurant</h2>
                <a href="{{ path('app_restaurant_index') }}" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>

            <div class="card-body">
                {{ include('restaurant/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>

            <div class="card-footer bg-light">
                {{ include('restaurant/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
