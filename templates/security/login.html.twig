{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <style>
        body {
            background-image: url('{{ asset('/upload/morocco.jpg') }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }
    </style>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-lg p-5" style="width: 100%; max-width: 700px; border-radius: 16px; background-color: rgba(255,255,255,0.9);">
            <h2 class="text-center mb-5" style="font-weight: bold; font-size: 2rem;">Connexion à votre compte</h2>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-info mb-4">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <form method="post">
                <div class="row mb-4">
                    <div class="col-12">
                        <label for="username" class="form-label fs-5">Adresse email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username"
                               class="form-control form-control-lg border-success-subtle"
                               autocomplete="email" required autofocus>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-12">
                        <label for="password" class="form-label fs-5">Mot de passe</label>
                        <input type="password" name="_password" id="password"
                               class="form-control form-control-lg border-success-subtle"
                               autocomplete="current-password" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-grid mt-3">
                    <button class="btn btn-lg btn-success py-3 fs-5" type="submit">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
